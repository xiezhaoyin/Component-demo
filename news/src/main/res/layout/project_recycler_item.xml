<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/content"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/dp_10"
    android:elevation="@dimen/dp_6"
    android:orientation="vertical"
    app:cardCornerRadius="@dimen/dp_6">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:padding="@dimen/dp_10">

        <ImageView
            android:id="@+id/item_iv"
            android:layout_width="@dimen/dp_120"
            android:layout_height="@dimen/dp_220"
            android:layout_marginRight="@dimen/dp_10"
            android:src="@drawable/publicode" />

        <TextView
            android:id="@+id/item_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/dp_10"
            android:layout_toRightOf="@id/item_iv"
            android:textColor="@color/text_black"
            android:textSize="@dimen/bigger_size" />

        <TextView
            android:id="@+id/item_subTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/item_title"
            android:layout_marginBottom="@dimen/dp_25"
            android:layout_toRightOf="@id/item_iv"
            android:maxLength="80"
            android:textColor="@color/text_darkGray"
            android:textSize="@dimen/normal_size" />

        <TextView
            android:id="@+id/item_star"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/dp_20"
            android:layout_marginRight="@dimen/dp_5"
            android:layout_below="@id/item_subTitle"
            android:layout_alignBaseline="@id/item_iv_star"
            android:layout_toRightOf="@id/item_iv"
            android:textColor="@color/text_lightGray"
            android:textSize="@dimen/small_size" />

        <CheckBox
            android:id="@+id/item_iv_star"
            android:layout_width="@dimen/dp_20"
            android:layout_height="@dimen/dp_20"
            android:layout_below="@id/item_subTitle"
            android:layout_toRightOf="@id/item_star"
            android:background="@drawable/selector_checkbox_bg"
            android:button="@null"/>

        <TextView
            android:id="@+id/item_bottom"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_toRightOf="@id/item_iv"
            android:textColor="@color/text_darkGray"
            android:textSize="@dimen/normal_size" />


    </RelativeLayout>

</android.support.v7.widget.CardView>